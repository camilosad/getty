- model_class = Instrutor
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:nome) + ':'
  %br
  = @instrutor.nome
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @instrutor.email
%p
  %strong= model_class.human_attribute_name(:profissao) + ':'
  %br
  = @instrutor.profissao


= link_to t('.back', :default => t("helpers.links.back")), instrutores_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_instrutor_path(@instrutor), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), instrutor_path(@instrutor), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
